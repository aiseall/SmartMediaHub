{
  "watch": ["app.ts", "controllers/**/*", "models/**/*", "routes/**/*", "services/**/*"],
  "ext": "ts,js,json",
  "ignore": ["node_modules/**/*", "*.test.ts"],
  "exec": "ts-node app.ts",
  "delay": "1000",
  "legacyWatch": true,
  "verbose": true,
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "app:*"
  },
  "restartable": "rs",
  "events": {
    "restart": "clear"
  }
}